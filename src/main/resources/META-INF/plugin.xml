<idea-plugin>
    <id>com.github.filipwtf.filesize</id>
    <name>file-size</name>
    <vendor>filipwtf</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="com.github.filipwtf.filesize.FileSize" class="com.github.filipwtf.filesize.FileSize"
                text="FileSizeAction"/>
    </actions>

    <applicationListeners>
        <listener class="com.github.filipwtf.filesize.listeners.FileSaveListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>
</idea-plugin>
